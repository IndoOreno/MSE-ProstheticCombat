<Defs>

	<HediffDef ParentName="MSE_AddedBodyPartArchotech">
		<defName>MSEPC_PCAARM_CR</defName>
		<label>PCA ARM-CR</label>
		<labelNoun>a PCA ARM-CR</labelNoun>
		<comps>
			<li Class="OrenoPCF.HediffCompProperties_VerbGiverExtended">
				<toggleLabel>PCA ARM-CR</toggleLabel>
				<toggleDescription>PCA ARM-CR ({0})\n\nA weaponized archotech {1}. With its mounted charge rifle weapon, it charges each shot with unstable energy as it leaves the barrel.</toggleDescription>
				<toggleBackgroundPath>UI/Widgets/Prosthetic/DesButBGDY</toggleBackgroundPath>
				<toggleIconPath>Things/Item/Equipment/WeaponRanged/ChargeRifle</toggleIconPath>
				<toggleIconAngle>-45.0</toggleIconAngle>
				<verbs>
					<li>
						<label>charge rifle</label>
						<verbClass>Verb_Shoot</verbClass>
						<accuracyTouch>0.28</accuracyTouch>
						<accuracyShort>0.32</accuracyShort>
						<accuracyMedium>0.28</accuracyMedium>
						<accuracyLong>0.23</accuracyLong>
						<hasStandardCommand>true</hasStandardCommand>
						<defaultProjectile>Bullet_ChargeRifle</defaultProjectile>
						<warmupTime>2.00</warmupTime>
						<range>25.9</range>
						<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
						<burstShotCount>3</burstShotCount>
						<soundCast>Shot_ChargeRifle</soundCast>
						<soundCastTail>GunTail_Medium</soundCastTail>
						<muzzleFlashScale>6</muzzleFlashScale>
					</li>
				</verbs>
				<verbsProperties>
					<li>
						<label>charge rifle</label>
						<description>PCA ARM-CR - Charge rifle: A weapon that mounted to your pawn {0}. Pulse-charge technology charges each shot with unstable energy as it leaves the barrel. Released on impact, the charged energy greatly increases the damage done. It only has half stats over normal charge rifle weapon.</description>
						<uiIconPath>UI/Icons/Prosthetic/ChargeB</uiIconPath>
					</li>
				</verbsProperties>
			</li>
		</comps>
		<spawnThingOnRemoved>MSEPC_PCAARM_CR</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.50</partEfficiency>
		</addedPartProps>
	</HediffDef>

